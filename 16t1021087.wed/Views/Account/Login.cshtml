@model _16t1021087.wed.Controllers.AccountController
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>CornSlad Store | Đăng nhập</title>
    <style>
        .login-box-msg{
            font-size:30px;
            font-weight:bolder;
            color:#fff;
            
        }
        .col-xs-4 {
            text-align:right;
        }
        .login-box-body {
            
        }
    </style>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Themes/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Themes/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Themes/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Themes/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Themes/plugins/iCheck/square/blue.css">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box" style="background-color:antiquewhite">
        <div class="login-logo">
            <a href="~/Themes/index2.html"><b>Corn Salad </b> Store</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body" style="background-color: #06A1C4 ">
            <p class="login-box-msg">Đăng nhập</p>

            <form action="~/Account/Login" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    <input name="userName" value="@ViewBag.UserName" type="email" class="form-control" placeholder="Email">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="password" type="password" class="form-control" placeholder="Password">
                    @Html.ValidationMessage("", "", new { @style = "color: #fff" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">

                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
                    </div>

                </div>
            </form>
                </div>
        </div>
            

          
</body>
</html>



