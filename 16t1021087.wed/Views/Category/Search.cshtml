@model _16t1021087.wed.Models.CategorySearchOutput
@{ 
    Layout = null;
}

<p>
    có <strong>@string.Format("{0:N0}", Model.RowCount)</strong>
    nhà cung cấp trong tổng số <strong> @string.Format("{0:N0}", Model.PageCount)</strong>
    Trang
</p>
<div class="tbody">
    <table class=" table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th> Tên loại hàng</th>
                <th> Mô tả </th>
                @*<th> Thư mục mẹ </th>*@
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    @*<td>@item.ParentCategoryId</td>*@

                    <td>
                        <a href="~/Category/Edit/@item.CategoryID" class="btn btn-sm btn-success">Edit</a>
                        <a href="~/Category/Delete/@item.CategoryID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }
            }
        </ul>

    </div>
</div>
<style>
    .tbody {
        background-color: beige;
    }
    .bg-primary{
        text-align:center;
    }

</style>
