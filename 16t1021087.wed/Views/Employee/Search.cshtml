@model _16t1021087.wed.Models.EmployeeSearchOutput
@{
    Layout = null;
}

<div class="box-body">
    <p>
        có <strong>@string.Format("{0:N0}", Model.RowCount)</strong>
        nhà cung cấp trong tổng số <strong> @string.Format("{0:N0}", Model.PageCount)</strong>
        Trang
    </p>
    <div class="duongvien">
        <div class="table-responsive">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr class="title">
                        <th style="width:100px">Ảnh</th>
                        <th style="width:100px">Tên nhân viên</th>
                        <th>Ngày sinh</th>
                        <th>Email</th>
                        <th>Ghi chú</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr class="td">
                            <td><img src="~/Photo/@item.Photo" style="width:100px" alt="User Image"></td>
                            <td style="width:10%">@item.FirstName @item.LastName </td>
                            <td style="width:10%">@string.Format("{0:dd-MM-yyyy}", item.BirthDate)</td>
                            <td>@item.Email</td>
                            <td>@item.Notes</td>
                            <td style="width:10%">
                                <a href="~/Employee/Edit/@item.EmployeeID" class="btn btn-sm btn-success">Edit</a>
                                <a href="~/Employee/Delete/@item.EmployeeID" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            </div>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.Page)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                    }
                }
            </ul>
        </div>
    </div>

<style>
    .box-body {
        background-color: beige;
        
    }
    .td {
        border: 1px solid;
        border-color: #000000;
    }

    .duongvien {
        
        border-color: #000000;
    }
    .title{
        text-align:center;
        background-color:#337ab7;
        color: #fff;
    }
    
</style>

    

