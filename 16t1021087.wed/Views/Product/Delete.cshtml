@model _16t1021087.DomainModels.Product
@{
    ViewBag.Title = "Xóa mặt hàng";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/Delete/@Model.ProductID" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ProductName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Unit</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Price</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ảnh:</label>
                <div class="col-sm-10">


                    <img id="photo" alt="your image" width="100" height="100"
                         src="~/Photo/@Model.Photo" />
                    @Html.HiddenFor(m => m.Photo)

                    <input type="file"
                           onchange="document.getElementById('photo').src = window.URL.createObjectURL(this.files[0])"
                           name="uploadPhoto">

                </div>


            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (_16t1021087.BussinessLayers.ProductDataService.InUsedProduct(Model.ProductID))
                    {
                        <p class="text-danger"> Không được xóa sản phẩm</p> }
                    else
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Đồng ý xóa
                        </button>}
                    <a class="btn btn-warning" href="~/product">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>
<style>
    .box-body {
        background-color: #f5caef;
        color: #1a2a92;
    }
</style>

