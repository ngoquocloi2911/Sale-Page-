
@model _16t1021087.DomainModels.Shipper
@{
    
}


<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Shipper/Save" method="post">

            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.ShipperID)
            @Html.ValidationSummary("", new { @style = "color:#f00" })

            @*<input type="hidden" name="ShipperID" value="@Model.ShipperID" />*@
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên người giao hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ShipperName,
                    new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                    @*<input type="text" class="form-control" id="ShipperName"
                name="ShipperName" autofocus value="@Model.ShipperName">*@
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @style = "color:#f00" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Điện thoại:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Phone,
                    new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                    @*<input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone">*@
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu
                    </button>
                    <a href="~/Shipper" class="btn btn-warning">
                        <i class="glyphicon glyphicon-circle-arrow-left"></i>
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
<style>
    .control-label {
        font-weight: bolder;
        font-size: 15px;
        margin-right: -20px;
        color: #3d0455;
    }

    .form-horizontal {
        background-color: #89c7f5;
        margin: -10px;
        padding: 10px;
    }
</style>




