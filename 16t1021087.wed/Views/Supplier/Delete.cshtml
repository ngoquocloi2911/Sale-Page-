@model _16t1021087.DomainModels.Supplier
@{
    ViewBag.Title = "Xóa nhà cung cấp";
}


<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Supplier/Delete/@Model.SupplierID" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    @Html.ValueFor(m => m.SupplierName )
                    @*<p class="form-control-static">@Model.SupplierName</p>*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên giao dịch:</label>
                <div class="col-sm-10">
                    @Html.ValueFor(m => m.ContactName)
                    @* <p class="form-control-static">@Model.ContactName</p>*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Địa chỉ:</label>
                <div class="col-sm-10">
                    @Html.ValueFor(m => m.Address)
                    @*<p class="form-control-static">@Model.Address</p>*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Điện thoại:</label>
                <div class="col-sm-10">
                    @Html.ValueFor(m => m.Phone)
                    @*<p class="form-control-static">@Model.Phone</p>*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Quốc gia:</label>
                <div class="col-sm-10">
                    @Html.ValueFor(m => m.Country)
                    @*<p class="form-control-static">@Model.Country</p>*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Thành phố:</label>
                <div class="col-sm-10">
                    @Html.ValueFor(m => m.City)
                   @* <p class="form-control-static">@Model.City</p>*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Mã bưu chính:</label>
                <div class="col-sm-10">
                    @Html.ValueFor(m => m.PostalCode)
                   @* <p class="form-control-static">@Model.PostalCode</p>*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">xóa dữ liệu</button>
                    <a href="~/Supplier" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>
<style>
    .box-body{
        background-color:#f5caef;
        color:#1a2a92;
    }
</style>


