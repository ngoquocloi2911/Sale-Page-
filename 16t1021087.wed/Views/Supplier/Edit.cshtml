
@model _16t1021087.DomainModels.Supplier

@{
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Supplier/Save" method="post">
            @Html.AntiForgeryToken() 

            @Html.HiddenFor(m => m.SupplierID)

            
           @* <input type="hidden" name="SupplierID" value="@Model.SupplierID" />*@
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.SupplierName, 
                   new { @class="form-control", @placehoder= "",@autofocus = "autofocus"})
                    @*<input type="text" class="form-control" id="SupplierName" name="SupplierName" 
                           value="@Model.SupplierName" autofocus>*@
                    @Html.ValidationMessageFor(m => m.SupplierName,"", new {@style ="color:#f00"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên giao dịch:</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="ContactName" name="ContactName"
        value="@Model.ContactName">*@
                    @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Địa chỉ:</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="Address" name="Address" value="@Model.Address">*@
                    @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Điện thoại:</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="Phone" name="Phone" value="=@Model.Phone">*@
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Quốc gia:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control" })
                    @*<select class="form-control" id="Country" name="Country">
            <option value="">-- Chọn quốc gia --</option>
            @foreach (var item in _16t1021087.BussinessLayers.CommonDataService.ListOfCountries())
            {
                if (item.CountryName == Model.Country)
                {
                    <option value="@item.CountryName" selected> @item.CountryName</option>
                }
                <option value="@item.CountryName">@item.CountryName</option>

            }

        </select>*@
                    @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Thành phố:</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="City" name="City" value="@Model.City">*@
                    @Html.ValidationMessageFor(m => m.City, "", new { @style = "color:#f00" })
                    
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Mã bưu chính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="PostalCode" name="PostalCode" value="@Model.PostalCode">*@
                    @Html.ValidationMessageFor(m => m.PostalCode, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary" style="margin-left:300px">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu
                    </button>
                    <a href="~/Supplier" class="btn btn-warning">
                        <i class="glyphicon glyphicon-circle-arrow-left"></i>
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
<style>
    .control-label {
        font-weight: bolder;
        font-size: 15px;
        margin-right: -20px;
        color: #3d0455;
    }
    .form-horizontal {
        background-color:#89c7f5;
        margin: -10px;
        padding: 10px;
            
    }
